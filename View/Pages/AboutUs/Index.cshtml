<style>
    /* Màu sắc chủ đạo */
    :root {
        --primary-color: #1a76d1;
        --primary-dark: #155a9f;
        --secondary-color: #f8f9fa;
        --accent-color: #ff6b35;
        --text-color: #333;
        --text-light: #777;
    }

    /* Section chung */
    .about-section {
        padding: 5rem 0;
    }

    .section-header {
        text-align: center;
        margin-bottom: 4rem;
    }

    .section-title {
        color: var(--primary-color);
        font-weight: 700;
        margin-bottom: 1.5rem;
        position: relative;
        display: inline-block;
    }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: -15px;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 4px;
            background-color: var(--accent-color);
        }

    .section-subtitle {
        color: var(--text-light);
        font-size: 1.2rem;
        max-width: 700px;
        margin: 0 auto;
    }

    /* Lịch sử hình thành */
    .history-timeline {
        position: relative;
        max-width: 1200px;
        margin: 4rem auto;
    }

        .history-timeline::after {
            content: '';
            position: absolute;
            width: 4px;
            background-color: var(--primary-color);
            top: 0;
            bottom: 0;
            left: 50%;
            margin-left: -2px;
            border-radius: 2px;
        }

    .timeline-item {
        padding: 10px 40px;
        position: relative;
        width: 50%;
        box-sizing: border-box;
    }

        .timeline-item::after {
            content: '';
            position: absolute;
            width: 20px;
            height: 20px;
            background-color: white;
            border: 4px solid var(--accent-color);
            border-radius: 50%;
            top: 15px;
            z-index: 1;
        }

    .left {
        left: 0;
        text-align: right;
    }

    .right {
        left: 50%;
        text-align: left;
    }

    .left::after {
        right: -12px;
    }

    .right::after {
        left: -12px;
    }

    .timeline-content {
        padding: 20px 30px;
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
    }

    .timeline-year {
        color: var(--accent-color);
        font-weight: 700;
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
    }

    .timeline-title {
        color: var(--primary-color);
        font-weight: 600;
        margin-bottom: 1rem;
    }

    /* Sứ mệnh và tầm nhìn */
    .mission-vision {
        background-color: var(--secondary-color);
        padding: 4rem 0;
    }

    .mv-card {
        background-color: white;
        border-radius: 10px;
        padding: 2.5rem;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
        height: 100%;
        transition: all 0.3s ease;
    }

        .mv-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
        }

    .mv-icon {
        font-size: 3rem;
        color: var(--accent-color);
        margin-bottom: 1.5rem;
    }

    .mv-title {
        color: var(--primary-color);
        font-weight: 700;
        margin-bottom: 1.5rem;
    }

    /* Đội ngũ lãnh đạo */
    .team-member {
        text-align: center;
        margin-bottom: 2rem;
    }

    .team-img {
        width: 200px;
        height: 200px;
        object-fit: cover;
        border-radius: 50%;
        border: 5px solid white;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
        margin: 0 auto 1.5rem;
    }

    .team-name {
        color: var(--primary-color);
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .team-position {
        color: var(--accent-color);
        font-weight: 600;
        margin-bottom: 1rem;
    }

    .team-social {
        margin-top: 1rem;
    }

        .team-social a {
            color: var(--text-light);
            margin: 0 0.5rem;
            font-size: 1.2rem;
            transition: all 0.3s ease;
        }

            .team-social a:hover {
                color: var(--primary-color);
            }

    /* Responsive */
    @@media (max-width: 768px) {
        .history-timeline::after {
            left: 31px;
        }

        .timeline-item {
            width: 100%;
            padding-left: 70px;
            padding-right: 25px;
        }

            .timeline-item::after {
                left: 21px;
            }

        .left, .right {
            left: 0;
            text-align: left;
        }

        .mv-card {
            padding: 1.5rem;
            margin-bottom: 1.5rem;
        }
    }
</style>

