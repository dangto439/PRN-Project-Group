@page
@model View.Pages.Auth.RegisterModel
@{
    ViewData["Title"] = "Đăng ký";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Đăng ký tài khoản</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <style>
        body {
            background: url('/images/bg_1.jpg') no-repeat center center fixed;
            background-size: cover;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .register-card {
            background-color: rgba(255, 255, 255, 0.95);
            padding: 2rem;
            border-radius: 12px;
            box-shadow: 0 0 30px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 450px;
        }

        .form-control {
            border-radius: 8px;
        }

        .btn-primary {
            width: 100%;
            border-radius: 8px;
        }

        .text-link {
            font-size: 0.9rem;
            text-align: center;
            margin-top: 1rem;
        }
    </style>
</head>
<body>
    <div class="register-card">
        <h3 class="text-center mb-4">Đăng ký tài khoản</h3>

        @if (!string.IsNullOrEmpty(Model.Messages))
        {
            <div class="alert alert-danger text-center">@Model.Messages</div>
        }

        <form method="post">
            <div class="mb-3">
                <label>Tên đăng nhập</label>
                <input asp-for="Usernames" class="form-control" placeholder="Tên đăng nhập" required />
            </div>

            <div class="mb-3">
                <label>Mật khẩu</label>
                <input asp-for="Passwords" type="password" class="form-control" placeholder="Mật khẩu" required />
            </div>

            <div class="mb-3">
                <label>Email</label>
                <input asp-for="Emails" type="email" class="form-control" placeholder="Email" required />
            </div>

            <div class="mb-3">
                <label>Họ tên</label>
                <input asp-for="FullNames" class="form-control" placeholder="Họ và tên" required />
            </div>

            <button type="submit" class="btn btn-primary">Đăng ký</button>
        </form>

        <div class="text-link">
            Đã có tài khoản? <a asp-page="/Login">Đăng nhập</a>
        </div>
    </div>
</body>
</html>
