@page
@model View.Pages.AccessDeniedModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Truy cập bị từ chối</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="d-flex align-items-center justify-content-center vh-100 bg-light">
    <div class="text-center p-4 border rounded shadow bg-white">
        <h1 class="text-danger">
            <i class="bi bi-exclamation-triangle-fill"></i> Truy cập bị từ chối
        </h1>
        <p class="mt-3">Bạn không có quyền truy cập vào trang này!</p>
        <div class="mt-4">
            <a asp-page="/Login" class="btn btn-primary me-2">Quay lại đăng nhập</a>
            <a asp-page="/Home/Index" class="btn btn-secondary">Trở về trang chủ</a>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>