@page
@model View.Pages.Courses.DetailsModel
@{
    ViewData["Title"] = "Chi tiết khóa học";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <style>
        body {
            background: url('/images/bg_3.jpg') no-repeat center center fixed;
            background-size: cover;
            font-family: Arial, sans-serif;
        }

        .course-detail-container {
            max-width: 800px;
            margin: 50px auto;
            background: rgba(255, 255, 255, 0.95);
            padding: 20px;
            margin-bottom: 200px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .course-image {
            width: 100%;
            height: 350px;
            object-fit: cover;
            border-radius: 10px;
        }

        .course-title {
            font-size: 1.8rem;
            font-weight: bold;
            margin-top: 15px;
        }

        .course-description {
            font-size: 1rem;
            color: #555;
            margin: 15px 0;
        }

        .course-teacherName {
            font-size: 1rem;
            color: #555;
            margin-top: 15px;
        }

        .course-price {
            font-size: 1.3rem;
            font-weight: bold;
            color: #28a745;
        }

        .btn-back, .btn-buy {
            display: inline-block;
            padding: 10px 20px;
            border-radius: 8px;
            text-decoration: none;
            font-size: 1rem;
            margin-top: 15px;
            transition: background 0.3s ease-in-out;
        }

        .btn-back {
            background-color: #6c757d;
            color: white;
        }

            .btn-back:hover {
                background-color: #5a6268;
            }

        .btn-buy {
            background-color: #ff6600;
            color: white;
        }

            .btn-buy:hover {
                background-color: #cc5200;
            }
    </style>
</head>
<body>

    <div class="course-detail-container">
        <img src="@Model.Course.ImageUrl" alt="@Model.Course.CourseName" class="course-image">
        <div class="course-title">@Model.Course.CourseName</div>
        <div class="course-teacherName">Tên giáo viên: @Model.TeacherName</div>
        <div class="course-description">@Model.Course.Description</div>
        <div class="course-price">Giá: @Model.Course.Price.ToString("N0") VND</div>
        

        <div>
            <a href="/Home/Index" class="btn-back">← Quay lại danh sách</a>
            <a href="/Payment/Index?courseId=@Model.Course.CourseId" class="btn-buy">Mua ngay</a>
        </div>
    </div>

</body>
</html>
