@page
@model View.Pages.NewInformation.NewsDetailModel
@{
    ViewData["Title"] = Model.News?.Title ?? "Không tìm thấy tin tức";
}

<div class="container mt-4">
    @if (Model.News != null)
    {
        <h2 class="text-primary">@Model.News.Title</h2>
        <p><strong>Thể loại:</strong> @Model.News.Category</p>
        <p><strong>Ngày bắt đầu sự kiện:</strong> @(Model.News.EventDate?.ToString("dd/MM/yyyy") ?? "Không có")</p>
        <hr />
        <p>@Model.News.Content</p>
    }
    else
    {
        <div class="alert alert-danger">Tin tức không tồn tại!</div>
    }
    <a asp-page="Index" class="btn btn-secondary mt-3" style="margin-bottom:600px">Quay lại danh sách</a>
</div>
