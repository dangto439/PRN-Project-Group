@page
@model View.Pages.Admin.EditModel

@{
    ViewData["Title"] = "Chỉnh sửa người dùng";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0 text-light"><i class="fas fa-user-edit me-2"></i> Chỉnh sửa thông tin</h3>
        </div>
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="User.UserId" />

                <div class="form-group mb-3">
                    <label asp-for="User.Username" class="form-label fw-bold"></label>
                    <input asp-for="User.Username" class="form-control" readonly />
                    <span asp-validation-for="User.Username" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="User.Email" class="form-label fw-bold"></label>
                    <input asp-for="User.Email" class="form-control" readonly />
                    <span asp-validation-for="User.Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="User.FullName" class="form-label fw-bold"></label>
                    <input asp-for="User.FullName" class="form-control" readonly />
                    <span asp-validation-for="User.FullName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="User.Role" class="form-label fw-bold"></label>
                    <select asp-for="User.Role" class="form-select">
                        <option value="ADMIN">ADMIN</option>
                        <option value="LECTURER">LECTURER</option>
                        <option value="CUSTOMER">CUSTOMER</option>
                    </select>
                    <span asp-validation-for="User.Role" class="text-danger"></span>
                </div>

                <!-- Ẩn các trường không cần chỉnh sửa -->
                <input type="hidden" asp-for="User.Password" />
                <input type="hidden" asp-for="User.CreatedAt" />
                <input type="hidden" asp-for="User.UpdatedAt" />
                <input type="hidden" asp-for="User.DeleteAt" />

                <div class="form-group mt-4 text-center">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i> Lưu thay đổi
                    </button>
                    <a asp-page="./UserManagement" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i> Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">