@page
@model View.Pages.Admin.NewsManagementModel
@{
    ViewData["Title"] = "Quản lý Tin tức";
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-2 d-none d-md-block sidebar">
            <div class="sidebar-sticky">
                <ul class="nav flex-column">
                    <li class="nav-item"><a class="nav-link" href="/Admin/Dashboard">Dashboard</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Admin/UserManagement">Quản lý User</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Admin/ContactManagement">Quản lý liên lạc</a></li>
                    <li class="nav-item"><a class="nav-link active" href="/Admin/NewsManagement">Quản lý tin tức</a></li>
                </ul>
            </div>
        </nav>

        <!-- Main Content -->
        <main role="main" class="col-md-10 ml-sm-auto px-4">
            <h2 class="mt-4">Quản lý Tin tức</h2>
            <div class="d-flex justify-content-between align-items-center mb-3">
                <a href="/Admin/News/Create" class="btn btn-primary">Thêm Tin tức</a>
            </div>
            <div class="card">
                <div class="card-body">
                    <table class="table table-hover">
                        <thead class="bg-primary text-white">
                            <tr>
                                <th>ID</th>
                                <th>Tiêu đề</th>
                                <th>Danh mục</th>
                                <th>Ngày sự kiện</th>
                                <th>Người tạo</th>
                                <th>Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var news in Model.NewsList)
                            {
                                <tr>
                                    <td>@news.NewsId</td>
                                    <td>@news.Title</td>
                                    <td>@news.Category</td>
                                    <td>@news.EventDate?.ToString("dd/MM/yyyy")</td>
                                    <td>Admin</td>
                                    <td>
                                        <a asp-page="/Admin/News/Edit" asp-route-id="@news.NewsId" class="btn btn-warning btn-sm">Sửa</a>
                                        <a asp-page="/Admin/News/Delete" asp-route-id="@news.NewsId" class="btn btn-danger btn-sm">Xóa</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </main>
    </div>
</div>

<style>
    /* Copy nguyên phần CSS từ Dashboard */
    .sidebar {
        height: 100vh;
        padding-top: 20px;
        border-right: 2px solid #ddd;
        background-color: #f8f9fa;
    }

        .sidebar .nav-link {
            font-weight: 500;
            color: #333;
            padding: 12px 20px;
            transition: all 0.3s ease;
        }

            .sidebar .nav-link:hover,
            .sidebar .nav-link.active {
                background-color: #007bff;
                color: white !important;
                border-radius: 5px;
            }

    main {
        background-color: #f4f6f9;
        padding: 30px;
        min-height: 100vh;
    }

    .card {
        border-radius: 10px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }

    .table {
        background-color: white;
        border-radius: 10px;
        box-shadow: 0px 2px 6px rgba(0, 0, 0, 0.1);
    }

        .table thead {
            background-color: #007bff;
            color: white;
        }
</style>