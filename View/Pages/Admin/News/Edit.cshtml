@page
@model View.Pages.Admin.News.EditModel

@{
    ViewData["Title"] = "Chỉnh sửa tin tức";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-warning text-white">
            <h3 class="mb-0 text-light"><i class="fas fa-edit me-2"></i> Chỉnh sửa tin tức</h3>
        </div>
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="NewsEvent.NewsId" />

                <div class="form-group mb-3">
                    <label asp-for="NewsEvent.Title" class="form-label fw-bold"></label>
                    <input asp-for="NewsEvent.Title" class="form-control" />
                    <span asp-validation-for="NewsEvent.Title" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="NewsEvent.Content" class="form-label fw-bold"></label>
                    <textarea asp-for="NewsEvent.Content" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="NewsEvent.Content" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="NewsEvent.Category" class="form-label fw-bold"></label>
                    <select asp-for="NewsEvent.Category" class="form-select">
                        <option value="Nghiên Cứu">Nghiên Cứu</option>
                        <option value="Tin tức">Tin tức</option>
                        <option value="Sự kiện">Sự kiện</option>
                    </select>
                    <span asp-validation-for="NewsEvent.Category" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="NewsEvent.EventDate" class="form-label fw-bold"></label>
                    <input asp-for="NewsEvent.EventDate" type="date" class="form-control" />
                    <span asp-validation-for="NewsEvent.EventDate" class="text-danger"></span>
                </div>

                <input type="hidden" asp-for="NewsEvent.CreatedAt" />
                <input type="hidden" asp-for="NewsEvent.UpdatedAt" />
                <input type="hidden" asp-for="NewsEvent.DeleteAt" />

                <div class="form-group mt-4 text-center">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i> Lưu thay đổi
                    </button>
                    <a asp-page="/Admin/NewsManagement" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i> Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 0.5rem;
    }
</style>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
