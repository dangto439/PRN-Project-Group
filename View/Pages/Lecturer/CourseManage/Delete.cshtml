@page
@model View.Pages.Lecturer.CourseManage.DeleteModel

@{
    ViewData["Title"] = "Xóa khóa học";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0 text-light"><i class="fas fa-trash-alt me-2"></i> Xác nhận xóa</h3>
        </div>
        <div class="card-body">
            <h4 class="text-danger mb-4">Bạn có chắc chắn muốn xóa khóa học này?</h4>

            <div class="row">
                <div class="col-md-12">
                    <dl class="row">
                        <dt class="col-sm-4 text-muted">Tên khóa học</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Course.CourseName)</dd>

                        <dt class="col-sm-4 text-muted">Mô tả</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Course.Description)</dd>

                        <dt class="col-sm-4 text-muted">Loại</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Course.Type)</dd>

                        <dt class="col-sm-4 text-muted">Giá</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Course.Price)</dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="card-footer bg-light">
            <form method="post">
                <input type="hidden" asp-for="Course.CourseId" />
                <div class="d-flex justify-content-between">
                    <a asp-page="/Lecturer/CourseManagement" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash-alt me-2"></i> Xác nhận xóa
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 0.5rem;
    }

    dt {
        font-weight: 500;
    }

    dd {
        margin-bottom: 0.75rem;
    }
</style>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
