@page
@model View.Pages.Lecturer.CourseManagementModel
@{
    ViewData["Title"] = "Quản lý Khóa học";
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-2 d-none d-md-block sidebar">
            <div class="sidebar-sticky">
                <ul class="nav flex-column">
                    <li class="nav-item"><a class="nav-link active" href="/Lecturer/CourseManagement">Quản lý Khóa học</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Lecturer/ResourceManagement">Quản lý Tài nguyên</a></li>
                </ul>
            </div>
        </nav>

        <!-- Main Content -->
        <main role="main" class="col-md-10 ml-sm-auto px-4">
            <h2 class="mt-4">Quản lý Khóa học</h2>
            <div class="d-flex justify-content-between align-items-center mb-3">
                <a href="/Lecturer/CourseManage/Create" class="btn btn-primary">Thêm Khóa học</a>
            </div>
            <div class="card">
                <div class="card-body">
                    <table class="table table-hover">
                        <thead class="bg-primary text-white">
                            <tr>
                                <th>ID</th>
                                <th>Tên Khóa học</th>
                                <th>Loại</th>
                                <th>Giá</th>
                                <th>Ngày tạo</th>
                                <th>Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var course in Model.CourseList)
                            {
                                <tr>
                                    <td>@course.CourseId</td>
                                    <td>@course.CourseName</td>
                                    <td>@course.Type</td>
                                    <td>@course.Price.ToString("C")</td>
                                    <td>@course.CreatedAt?.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <a asp-page="/Lecturer/CourseManage/Edit" asp-route-id="@course.CourseId" class="btn btn-warning btn-sm">Sửa</a>
                                        <a asp-page="/Lecturer/CourseManage/Delete" asp-route-id="@course.CourseId" class="btn btn-danger btn-sm">Xóa</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </main>
    </div>
</div>

<style>
    .sidebar {
        height: 100vh;
        padding-top: 20px;
        border-right: 2px solid #ddd;
        background-color: #f8f9fa;
    }

        .sidebar .nav-link {
            font-weight: 500;
            color: #333;
            padding: 12px 20px;
            transition: all 0.3s ease;
        }

            .sidebar .nav-link:hover, .sidebar .nav-link.active {
                background-color: #007bff;
                color: white !important;
                border-radius: 5px;
            }

    main {
        background-color: #f4f6f9;
        padding: 30px;
        min-height: 100vh;
    }

    .card {
        border-radius: 10px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }

    .table {
        background-color: white;
        border-radius: 10px;
        box-shadow: 0px 2px 6px rgba(0, 0, 0, 0.1);
    }

        .table thead {
            background-color: #007bff;
            color: white;
        }
</style>
