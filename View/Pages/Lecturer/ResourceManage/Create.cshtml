@page
@model View.Pages.Lecturer.ResourceManage.CreateModel

@{
    ViewData["Title"] = "Thêm tài liệu";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-success text-white">
            <h3 class="mb-0 text-light"><i class="fas fa-plus-circle me-2"></i> Thêm tài liệu</h3>
        </div>
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Resource.CourseId" class="form-label">Khóa học</label>
                    <select asp-for="Resource.CourseId" class="form-control" asp-items="Model.CourseList">
                        <option value="">-- Chọn khóa học --</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label asp-for="Resource.ResourceName" class="form-label">Tên tài liệu</label>
                    <input asp-for="Resource.ResourceName" class="form-control" />
                    <span asp-validation-for="Resource.ResourceName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Resource.ResourceType" class="form-label">Loại tài liệu</label>
                    <select asp-for="Resource.ResourceType" class="form-control">
                        <option value="Document">Tài liệu</option>
                        <option value="Video">Video</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label asp-for="Resource.FileUrl" class="form-label">Đường dẫn</label>
                    <input asp-for="Resource.FileUrl" class="form-control" />
                    <span asp-validation-for="Resource.FileUrl" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-page="/Lecturer/ResourceManagement" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save me-2"></i> Lưu
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
