@page
@model View.Pages.Student.MyCoursesModel
@{
    ViewData["Title"] = "Khóa học của tôi";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <style>
        body {
            background: url('/images/bg_2.jpg') no-repeat center center fixed;
            background-size: cover;
            font-family: Arial, sans-serif;
        }

        .hero-banner {
            background: linear-gradient(rgba(26, 118, 209, 0.8), rgba(26, 118, 209, 0.8)), url('/images/dept-1.jpg') center/cover;
            height: 300px;
            display: flex;
            align-items: center;
            margin-bottom: 40px;
        }

        .course-container {
            max-width: 1200px;
            margin: auto;
            margin-bottom: 600px;
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 25px;
            padding: 20px;
        }

        .course-card {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
            overflow: hidden;
        }

            .course-card:hover {
                transform: translateY(-5px);
            }

        .course-image {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

        .course-content {
            padding: 15px;
        }

        .course-title-main {
            background-color: rgba(0, 255, 0, 0.2);
            border-radius: 10px;
            padding: 10px 20px;
            border: 2px solid #28a745;
            font-size: 1.5rem;
            display: inline-block;
            margin-top: 20px;
        }


        .course-title {
            font-size: 1.25rem;
            font-weight: 600;
            margin-bottom: 10px;
            color: #333;
        }

        .course-description {
            font-size: 0.95rem;
            color: #666;
            margin-bottom: 15px;
            line-height: 1.4;
        }

        .btn-view {
            display: block;
            width: 100%;
            padding: 10px;
            background: #007bff;
            color: white;
            text-align: center;
            border-radius: 5px;
            text-decoration: none;
            transition: background 0.3s;
        }

            .btn-view:hover {
                background: #0056b3;
            }

        .empty-message {
            text-align: center;
            color: white;
            font-size: 1.2rem;
            grid-column: 1 / -1;
            padding: 40px 0;
        }
    </style>
</head>
<body>
    <div class="text-center"><h2 class="text-center text-success course-title-main">Khóa học đã mua</h2></div>
    <div class="course-container">
        @if (Model.MyCourses != null && Model.MyCourses.Any())
        {
            @foreach (var course in Model.MyCourses)
            {
                <div class="course-card">
                    <img src="@course.ImageUrl" alt="@course.CourseName" class="course-image">
                    <div class="course-content">
                        <div class="course-title">@course.CourseName</div>
                        <div class="course-description">@course.Description</div>
                        <a href="/Student/CourseDetail?courseId=@course.CourseId" class="btn-view">Bắt đầu học</a>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="empty-message">Bạn chưa có mua khóa học nào</p>
        }
    </div>
</body>
</html>